        <Links negative links={linksData}/>
      </div>
    </HtmlPanel>
    
  
    <div id="stuff" class="pt-24 flex flex-col gap-24 mb-24">
      <Staff people={boardData} title="Zarząd Stowarzyszenia"/>
      <Staff people={comitteeData} title="Komisja Rewizyjna"/>
    </div>

    <div id="payment" class="mx-auto">
