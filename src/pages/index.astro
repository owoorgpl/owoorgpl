<Layout title="Stowarzyszenie OwO">
  <TopMenu/>
    <Page>
      <div class="h-full flex-grow flex flex-col items-center justify-center bg-gradient-to-tr from-owopurple-800 to-owopurple-500">
        <img src="/assets/logo.svg" alt="Logo" class="max-w-[38rem] w-full px-4 animate-in slide-in-from-bottom fade-in-0 duration-1000 delay-75">
        <p class="mt-6 mv-7 p-2 tracking-wider font-bold text-3xl xs:text-4xl sm:text-5xl lg:text-6xl text-center animate-in fade-in duration-700 animation-delay-[0.75s] fill-mode-both">WSPIERAMY FURKULTURĘ</p>
      </div>
      <div class="absolute w-full bottom-4 flex flex-row justify-center items-center sm:flex animation-delay-1500 animate-in slide-in-from-bottom fade-in-0 duration-700 fill-mode-backwards">
        <a class="ml-auto mr-auto hover:scale-105 transition duration-100h" href="#start">
          <img src="/assets/icons/arrow-down.svg" alt="Arrow Down Icon" class="w-12 animate-bounce">
        </a>
      </div>
      
    </Page>
    <div id="start" class="mb-32"/>
    
    <SiteDescription/>

